#main
	padding 0 0 60px
	min-height: calc(100vh - 147px)
	text-align center
.main-title
	font-size: 20px
	line-height: 1.5
	span
		font-family: SUDB
		font-weight:  bold
.main-subtitle
	font-size: 22px
	font-family: SUDH
	font-weight: 800
	color cB
	margin 20px 0
.video-wrapper-main
	max-width 560px
	
.button-promo
	background-color: #25a0d4;
	font-family: SUDB
	font-weight: bold;
	border: 2px solid #fff;
	text-transform: none;
	font-size: 20px;
	border-radius: 100px;
	color: #fff;
	width 100%
	max-width 300px
	transition: all .3s ease
	&:hover
		background-color: #25a0d4;
		transform: scale(1.05)
.main-text
	font-size: 20px
	margin 30px 0  50px
	span
		background-color: yellow
		padding 0 5px
.main-img
	display block
	width 100%
	max-width 500px
	margin 0 auto