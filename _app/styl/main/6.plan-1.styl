#program
	padding: 90px 0
	overflow: hidden
.general-img-program
	bottom -90px
	left -390px
.nav-tabs
	width: 100%
	display: table
	padding-bottom: 50px
	li
		display: table-cell
		width: 33.33%
		a
			display: inline-block
			border-bottom: 1px solid
			line-height: 100px
			font-size: 100px
			color: cC
			transition: all .4s ease
		&.active
		&:hover
			a
				color cB
.program-day-title
	margin 0 0 40px
	font-size: 18px;
	font-weight: 500;
	line-height: 21px;
	letter-spacing: 0.405em;
	text-transform: uppercase;
	color: #787878;
.program-day-bonus
	display table
	width 100%
	&-title
		display table-cell
		width 50%
		color cB
		font-size: 144px;
		line-height: 144px;
	&-text
		display: table-cell
		width: 50%
		vertical-align: middle
.tab-content > .tab-pane {
	display: none;
}
.tab-content > .active {
	display: block;
}
.button-program
	margin-top: 80px